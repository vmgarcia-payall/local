<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="municipio_parroquia_view">
            <field name="name">res.municipio.parroquia.form</field>
            <field name="model">res.municipio.parroquia</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <group string="Crear nueva Parroquia" name="municipio" priority="2">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="Desc_Larga_Parr"/>
                        <field name="Nivel_Parr"/>
                    </group>
                        <group string="Urbanizaciones" name="urbanizacion" priority="2">
                            <field name="urbanizaciones_ids">
                            <tree editable="bottom">
                                <field name="code"/>
                                <field name="name"/>
                                <field name="Desc_Larga_Urb"/>
                                <field name="Nivel_Urb"/>
                                <field name="Cod_Postal"/>
                            </tree>
                    </field>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="municipio_parroquia_tree">
                    <field name="name">res.municipio.parroquia.list</field>
                    <field name="model">res.municipio.parroquia</field>
                    <field name="arch" type="xml">
                        <tree string="Parroquias Lista">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="Desc_Larga_Parr"/>
                            <field name="Nivel_Parr"/>
                        </tree>
                    </field>
        </record>

        <record model="ir.actions.act_window" id="municipio_parroquia_action">
            <field name="name">Parroquias</field>
            <field name="res_model">res.municipio.parroquia</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html"> <p class="o_view_nocontent_smiling_face"> Agregar Parroquias </p> </field>
        </record>

        <menuitem id="menu_municipio_parroquia" name="Parroquias" parent="contacts.menu_localisation" sequence="2"  action="municipio_parroquia_action"/>
    </data>
</odoo>