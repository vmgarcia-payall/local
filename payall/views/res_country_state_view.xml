<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_country_state_form_inherit">
            <field name="name">res.country.state.inherit.form</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='country_id']" position="after">

                        <field name="municipios_ids">
                            <tree editable="bottom">
                                <field name="code"/>
                                <field name="name"/>
                                <field name="Desc_Larga_Mun"/>

                            </tree>
                        </field>
                </xpath>
        </field>
    </record>

        <record model="ir.ui.view" id="country_state_tree">
            <field name="name">res.country.state.list</field>
            <field name="model">res.country.state</field>
            <field name="arch" type="xml">
                <tree string="Estados Lista">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="Desc_Larga_EF"/>
                    <field name="Nivel_EF"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="country_state_action">
            <field name="name">Estados</field>
            <field name="res_model">res.country.state</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html"> <p class="o_view_nocontent_smiling_face"> Agregar Estados </p> </field>
        </record>

   <!--     <menuitem id="menu_country_state" name="Estados Lista" parent="contacts.menu_localisation" sequence="2"  action="country_state_action"/> -->
        <menuitem id="contacts.menu_country_state_partner" name="Estados" parent="contacts.menu_localisation" sequence="2"  action="country_state_action"/>
    </data>
</odoo>